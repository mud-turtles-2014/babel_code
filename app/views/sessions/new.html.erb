<div class="login-div">
  <h1>Log In</h1>
  <p> Please login if you are a current user of Babel Code.
  <div class="error">
    <%=flash[:error]%>
  </div>
  <%=form_tag do %>
    <p><%=text_field_tag (:username), nil, placeholder: 'Username' %>
    <p><%=password_field_tag (:password), nil, placeholder: "Password" %>
    <p><%= submit_tag ("Log In"), :class => "button" %>
  <% end %>
</div>

<div class="signup-div">
  <h1>Sign Up</h1>
  <p>Create a Babel Code account, and view code solutions in other languages.
  <div class="error">
    <% if flash[:signin_error] %>
      <% flash[:signin_error].each do |msg| %>
      <p><%= msg %></p>
      <%end%>
    <%end%>
  </div>

  <%= form_for @user do |f| %>
    <p><%= f.text_field :username, placeholder: "Username" %>
    <p><%= f.text_field :email, placeholder: "Email" %>
    <p><%= f.password_field :password, placeholder: "Password" %>
    <p><%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>
    <p><%= f.submit "Sign Up", :class => "button" %>
  <% end  %>
</div>