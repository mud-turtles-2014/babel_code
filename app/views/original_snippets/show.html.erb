<div class="create-snip">
  <div class="vote-btn">
    <%= button_to "Up", { :controller => 'votes', action: 'create', votable_id: @original_snippet.id, votable_type: "OriginalSnippet", vote: 1 }, method: :post, :class => "button" %>
      <p><%= @original_snippet.tally_votes %></p>
      <%= button_to "Down", { :controller => 'votes', action: 'create', votable_id: @original_snippet.id, votable_type: "OriginalSnippet", vote: -1 }, method: :post, :class => "button" %>
  </div>

  <h1><div class="fun-box"></div>
  <%= @original_snippet.title %></h1>
    <p><%= @original_snippet.description %></p>
    <pre><%= @original_snippet.snippet %></pre>
    <p>Language: <%= @original_snippet.language.language %></p>
    <% if @original_snippet.user == current_user %>
    <%= button_to "Delete", @original_snippet, method: :delete, action: 'destroy' , :class => "button"%>
    <%= button_to "Edit", edit_original_snippet_path(@original_snippet), method: :get, :class => "button" %>
    <% end %>
</div><br><br><br>



Click <button class="button", id="create-reply-btn">reply</button> to this code snippet<br>
<div class="create-reply">
  <%= form_for @reply_snippet do |f| %>
  <div class="orig-snip"><ul>
    <li>Description:<br>
    <%= f.text_area :description %></li><br>
    <li>Code Snippet:<br>
    <%= f.text_area :snippet %><br>
    <li>Language:<br>
    <%= f.collection_select :language_id, Language.order(:language), :id, :language, :class=>"button"%></li></ul>
    <%= f.hidden_field :original_snippet_id, value: @original_snippet.id %>
    <%= f.submit "Reply", :class => "reply-button" %>
    </div>
  <% end %>
</div><br>


Scroll down to view replies<br>

<% @reply_snippets.each do |reply| %>

<div id="all-replies-div">

  <div class="reply-snip">
    <div class="vote-btn">
      <br><%= button_to "Up", votes_path(), { votable_id: reply.id, votable_type: "ReplySnippet", vote: 1 }, method: :post, :class => "button" %>
      <p><%= reply.tally_votes %></p>
      <%= button_to "Down", { :controller => 'votes', action: 'create', votable_id: reply.id, votable_type: "ReplySnippet", vote: -1 }, method: :post, :class => "button" %><br>
    <br></div>

      <div class="fun-box"></div><%= reply.description %>
      <pre><code><%= reply.snippet %></code></pre>
      <p>Language: <%= reply.language.language %></p>
      <% if reply.owned_by(current_user) %>
        <%= button_to "Delete", reply_snippet_path(reply), method: :delete, action: 'destroy', :class => "button"%>
      <% end %>
    </div>
  <% end %>
</div>


