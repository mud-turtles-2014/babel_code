<div class="tab-box">

  <ul class="tab-nav">
    <button class ="recent-button">Recent Posts</button>
    <button class="ruby-button">Ruby Posts</button>
    <button class="javascript-button">JavaScript Posts</button>
  </ul>



  <%= render partial: "entries", collection: @recent, locals: {title: "Recent Posts", id: "recent-id"} %>

  <%= render partial: "entries", collection: @ruby_entries, locals: {title: "Recent Posts", id: "recent-id"} %>

  <%= render partial: "entries", collection: @js_entries %>

  <div class="recent-posts">
    <h2>Recent Posts</h2>
    <ul><% @recent.each do |original_snippet| %>
      <li><%= link_to original_snippet.title, original_snippet%></li>
    <% end %>
    </ul>
  </div>

  <div class="ruby-posts">
    <h2>Ruby Posts</h2>
    <ul><% @ruby_entries.each do |original_snippet| %>
      <li><%= link_to original_snippet.title, original_snippet%></li>
    <% end %>
    </ul>
  </div>

  <div class="javascript-posts">
    <h2>JavaScript Posts</h2>
    <ul><% @js_entries.each do |original_snippet| %>
      <li><%= link_to original_snippet.title, original_snippet%></li>
    <% end %>
    </ul>
  </div>
</div>
